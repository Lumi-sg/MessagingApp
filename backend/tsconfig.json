{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"baseUrl": "src",
		"outDir": "./dist",
		"sourceMap": true,
		"noImplicitAny": true,
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
